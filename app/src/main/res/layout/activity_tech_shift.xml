<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechShiftActivity">

    <Button
        android:id="@+id/tech_shift1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shift1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213"
        android:onClick="clickShift"/>

    <Button
        android:id="@+id/tech_shift2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shift2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tech_shift1"
        app:layout_constraintVertical_bias="0.186"
        android:onClick="clickShift"/>

    <Button
        android:id="@+id/tech_shift3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shift3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tech_shift2"
        app:layout_constraintVertical_bias="0.337"
        android:onClick="clickShift"/>
</androidx.constraintlayout.widget.ConstraintLayout>